{
  "name": "planning-poker-server",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs": "jsdoc -c jsdoc.json",
    "docs:serve": "npm run docs && npx http-server docs -p 8080 -o"
  },
  "keywords": [
    "planning-poker",
    "websocket"
  ],
  "author": "Aida & Martine ",
  "license": "MIT",
  "description": "Backend pour Planning Poker",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "docdash": "^2.0.2",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "jsdoc": "^4.0.5",
    "nodemon": "^3.1.11"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js"
    ]
  }
}
