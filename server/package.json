{
  "name": "planning-poker-server",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "docs": "jsdoc -c jsdoc.json",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs:serve": "npx http-server docs -p 8080",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "ci:test": "jest --coverage --coverageReporters=json-summary",
    "ci:docs": "jsdoc src -d docs -c jsdoc.json --readme README.md"
  },
  "keywords": [
    "socket.io",
    "planning-poker",
    "express"
  ],
  "author": "Aida & Martine ",
  "license": "MIT",
  "description": "Backend pour Planning Poker",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "multer": "^2.0.2",
    "socket.io": "^4.8.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "docdash": "^2.0.2",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "jsdoc": "^4.0.5",
    "nodemon": "^3.1.11"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js"
    ]
  }
}
